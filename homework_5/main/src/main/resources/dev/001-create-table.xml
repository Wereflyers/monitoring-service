<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="dev/changelog.xml">
    <changeSet id="001-create-table" author="wereflyers" context="dev">
        <createSequence sequenceName="SEQ_INDICATIONS"
                        schemaName="monitoring_schema"
                        cycle="false"
                        minValue="1"
                        maxValue="9223372036854775807"
                        startValue="1"
                        incrementBy="1"/>
        <createTable tableName="users_table" schemaName="monitoring_schema">
            <column autoIncrement="true" name="id" type="SERIAL" valueSequenceNext="SEQ_INDICATIONS.NEXTVAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="indication_type" schemaName="monitoring_schema">
            <column autoIncrement="true" name="id" type="SERIAL" valueSequenceNext="SEQ_INDICATIONS.NEXTVAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type_name" type="VARCHAR(30)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="indication" schemaName="monitoring_schema">
            <column autoIncrement="true" name="id" type="SERIAL" valueSequenceNext="SEQ_INDICATIONS.NEXTVAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="indication_value" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="BIGINT">
                <constraints nullable="false" foreignKeyName="indication_type_fk" references="indication_type(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="001-create-table" author="wereflyers" context="test">
